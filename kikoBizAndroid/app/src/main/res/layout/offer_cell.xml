<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titre+Desc"

        android:id="@+id/offerTitle"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/offer_img"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="il y a 4j"
        android:id="@+id/offerDuration"
        android:layout_alignTop="@+id/offerTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Porto-Novo"
        android:id="@+id/offerCity"
        android:layout_alignBottom="@+id/offer_img"
        android:layout_alignLeft="@+id/offerCost"
        android:layout_alignStart="@+id/offerCost"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE"
        android:id="@+id/offerCost"
        android:layout_below="@+id/offerTitle"
        android:layout_alignLeft="@+id/offerTitle"
        android:layout_alignStart="@+id/offerTitle" />
</RelativeLayout>