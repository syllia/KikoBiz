<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cornered_cells"
    android:minHeight="135dp"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:lines="2"
        android:scrollHorizontally="true"
        android:ellipsize="end"

        android:text="Titre+Desc"
        android:id="@+id/offerTitle"

        android:layout_toRightOf="@+id/offer_img"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/offer_img"
        android:scaleType="centerCrop"

        android:layout_margin="5dp" />
    <!--android:adjustViewBounds="true"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="il y a 4j"
        android:id="@+id/offerDuration"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Porto-Novo"
        android:id="@+id/offerCity"
        android:layout_below="@+id/offerCost"
        android:layout_alignLeft="@+id/offerCost"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE"
        android:id="@+id/offerCost"
        android:layout_below="@+id/offerTitle"
        android:layout_alignLeft="@+id/offerTitle"
        android:layout_alignStart="@+id/offerTitle"
        android:layout_marginTop="10dp" />
</RelativeLayout>