<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bj.invest.projects.appsender.Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text=""
        android:background="@drawable/ist_customers"
        android:id="@+id/ListOfCustomer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text=""
        android:id="@+id/ManagerButton"
        android:background="@drawable/manager_icon"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gestion"
        android:textAlignment="center"
        android:id="@+id/managerText"
        android:textStyle="bold"
        android:layout_below="@+id/ManagerButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Clients"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_below="@+id/ListOfCustomer"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
